{
  "scripts": {
    "build": "npm-run-all --serial build:webpack build:zip",
    "build:webpack": "del-cli -f dist && make-dir dist && webpack",
    "build:zip": "del-cli -f out && make-dir out && cross-zip ./dist ./out/dist.zip",
    "dev": "webpack serve --watch --devtool inline-source-map --mode development",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "eslint src/**/*.ts src/**/*.tsx --fix"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "copy-webpack-plugin": "^6.3.2",
    "cross-zip-cli": "^1.0.0",
    "css-loader": "^5.0.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "file-loader": "^6.2.0",
    "make-dir-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "web-ext-types": "^3.2.1",
    "webpack": "^5.7.0",
    "webpack-cli": "^4.2.0",
    "webpack-copy-bundle": "^0.3.4",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "webextension-polyfill": "^0.7.0"
  }
}
